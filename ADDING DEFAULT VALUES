CREATE TABLE PLAYERS_INFO (
    NAME VARCHAR(50),
    JERSEY_NO INT,
    AGE INT,
    INTER_MAT INT,
    SCORE INT
    DESIGNATION VARCHAR(50) DEFAULT "CRICKETER"
);

